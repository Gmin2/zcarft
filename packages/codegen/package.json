{
  "name": "@zcraft/codegen",
  "version": "0.1.0",
  "description": "ABI-based code generator for FHEVM contracts",
  "type": "module",
  "main": "./lib/src/index.js",
  "types": "./lib/src/index.d.ts",
  "scripts": {
    "build": "tsc -b tsconfig.build.json && npm run copy:templates",
    "copy:templates": "cp -r src/templates lib/",
    "clean": "rm -rf lib *.tsbuildinfo",
    "dev": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "test": "node --test lib/test/**/*.test.js",
    "test:watch": "node --test --watch lib/test/**/*.test.js"
  },
  "dependencies": {
    "abitype": "^1.2.3",
    "@zama-fhe/relayer-sdk": "^0.3.0-8",
    "ethers": "^6.0.0",
    "handlebars": "^4.7.8"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  }
}
